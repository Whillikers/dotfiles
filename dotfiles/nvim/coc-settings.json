{
    "coc.preferences.colorSupport": false,
    "coc.preferences.formatOnSaveFiletypes": ["python", "rust"],
    "diagnostic.format": "%message [%source:%code]",
    "diagnostic.checkCurrentLine": true,
    "diagnostic.errorSign": ">>",
    "diagnostic.warningSign": ">>",
    "diagnostic.infoSign": "--",
    "diagnostic.hintSign": "--",
    "snippets.priority": 100,
    "snippets.snipmate.enable": false,
    "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
    "cSpell.enabledLanguageIds": ["markdown", "pandoc", "plaintext"],
    "python.formatting.blackPath": "/usr/bin/black",
    "python.linting.flake8Path": "/usr/bin/flake8",
    "python.linting.mypyPath": "/usr/bin/mypy",
    "python.sortImports.path": "/usr/bin/isort",
    "python.jediPath": "/usr/lib/python3.8/site-packages",
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=88, --ignore=E203,W503"],
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": false,
    "python.sortImports.args": ["-l 88"],
    "python.venvFolders": ["~/.local/share/pyenv/versions/", "~/.cache/pypoetry/virtualenvs/"],
    "python.venvPath": "~/.cache/pypoetry/virtualenvs/",
    "cSpell.userWords": [
      "Aidan",
      "Swope",
      "backpropagation"
    ]
}
