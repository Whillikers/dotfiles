set $base04 #cad3ff
set $base05 #e9e7e1
set $base06 #eff0f9
set $base07 #f2fbff
set $base08 #ff661a
set $base09 #19f988
set $base0A #ffdc2d
set $base0B #f2e6a9
set $base0C #fb6acb
set $base0D #40bfff
set $base0E #ae94f9
set $base0F #6187ff

# %%base16_template_end%%

# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $base01 $base01 $base03 $base0C $base0F
client.focused_inactive $base01 $base01 $base05 $base01 $base01
client.unfocused        $base01 $base00 $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
client.placeholder      $base00 $base00 $base05 $base00 $base00
client.background       $base07

# Borders
gaps inner 7
gaps outer 0
new_window pixel 1


### Program settings ###
for_window [class="TestGame"] floating enable
for_window [window_role="GtkFileChooserDialog"] floating enable, resize set 1280 800
for_window [class="Matplotlib"] floating enable
for_window [class="Dynalist"] move scratchpad; scratchpad show
