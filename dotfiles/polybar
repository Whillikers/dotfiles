; Module settings
[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-dark}
format-prefix-underline = ${colors.yellow}

label-layout = %layout%
label-layout-underline = ${colors.yellow}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.yellow}
label-indicator-underline = ${colors.yellow}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
enable-click = true
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

; Workspaces
ws-icon-0 = 2:terminals; [2]
ws-icon-1 = 1:browser; [1]
ws-icon-2 = 10:chat; [0]
ws-icon-3 = 3:code; [3]
ws-icon-4 = 9:music;♫ [9]
ws-icon-5 = 8; [8]
ws-icon-6 = 4:book; [4]
ws-icon-7 = 5; [5]
ws-icon-8 = 6; [6]
ws-icon-9 = 7; [7]
ws-icon-default = 

label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.purple}

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-foreground = ${colors.lightBlue}
label-focused-underline = ${colors.lightBlue}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-underline = ${colors.foreground}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-foreground = ${colors.pink}
label-urgent-padding = ${self.label-focused-padding}
label-urgent-underline = ${self.label-urgent-foreground}

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = "CPU: "
format-prefix-foreground = ${colors.foreground-dark}
label = %percentage%%

[module/gpu]
type = custom/script
exec = "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits"
exec-if = "lspci | grep -q 'VGA.*NVIDIA'"
interval = 5
format-prefix = "GPU: "
format-prefix-foreground = ${colors.foreground-dark}
label = %output%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM: "
format-prefix-foreground = ${colors.foreground-dark}
label = %percentage_used%%

[module/wireless-network]
type = internal/network
