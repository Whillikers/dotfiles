[base-bar]
background = #f5f5f5
foreground = #575f66

height = 50
border-bottom-size = 3
border-bottom-color = #e7e8e9
padding = 1
module-margin = 1

tray-maxsize = 40
tray-padding = 5

font-0 = Custom Regular Iosevka Fixed:size=20;6
font-1 = FontAwesome5Free:style=Solid:size=20;6

[bar/horizontal]
inherit = base-bar
monitor = DP-2
modules-left = i3 vimwiki
modules-center =  date pulseaudio cpu memory gpu
modules-right =
tray-position = right

[bar/vertical]
inherit = base-bar
monitor = DP-0
modules-left = i3

[module/i3]
type = internal/i3
pin-workspaces = true
label-focused-foreground = #fa8d3e
label-urgent-foreground = #f51818
reverse-scroll = false

[module/vimwiki]
type = custom/text
content=
click-left = i3-msg '[instance="vimwiki"] scratchpad show'

[module/date]
type = internal/date
label =   %time% %date%
date = %m/%d/%Y
time = %I:%M

[module/pulseaudio]
type = internal/pulseaudio
format-volume =  <label-volume>
label-volume = %percentage:2%%
label-muted =   0%

[module/memory]
type = internal/memory
format = <label>
label =  %percentage_used:2%%

[module/cpu]
type = internal/cpu
label =  %percentage:2%%

[module/gpu]
type = custom/script
exec = ~/bin/for_robots/polybar/nvidia-smi.sh
interval = 1
